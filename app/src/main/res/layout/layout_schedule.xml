<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Pilih Bus"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_lokasiagent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_margin="16dp"
                android:src="@drawable/calendar_white"/>

            <TextView
                android:id="@+id/tvLokasiKeberangkatan"
                android:layout_toEndOf="@id/ivCalendar"
                android:layout_alignBottom="@+id/ivCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="Keberangkatan Purwokerto"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/tvTglKeberangkatan"
                android:layout_toEndOf="@id/ivCalendar"
                android:layout_below="@+id/tvLokasiKeberangkatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                android:text="12 May 2019"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/cv_lokasiagent"
        android:id="@+id/rv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>

    </RelativeLayout>

</LinearLayout>